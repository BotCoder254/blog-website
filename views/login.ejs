<div class="max-w-md mx-auto">
    <h1 class="text-3xl font-bold mb-4">Login</h1>
    <form action="/auth/login" method="POST">
        <div class="mb-4">
            <label for="email" class="block mb-2">Email</label>
            <input type="email" id="email" name="email" required class="w-full px-3 py-2 border rounded">
        </div>
        <div class="mb-4">
            <label for="password" class="block mb-2">Password</label>
            <input type="password" id="password" name="password" required class="w-full px-3 py-2 border rounded">
        </div>
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded"><i class="fas fa-sign-in-alt mr-1"></i>Login</button>
    </form>
    <p class="mt-4">Don't have an account? <a href="/auth/register" class="text-blue-500">Register here</a></p>
</div>