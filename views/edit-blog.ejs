<div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold mb-4">Edit Blog</h1>
    <form action="/blog/edit/<%= blog._id %>" method="POST" enctype="multipart/form-data">
        <div class="mb-4">
            <label for="title" class="block mb-2">Title</label>
            <input type="text" id="title" name="title" required class="w-full px-3 py-2 border rounded" value="<%= blog.title %>">
        </div>
        <div class="mb-4">
            <label for="content" class="block mb-2">Content</label>
            <textarea id="content" name="content" required class="w-full px-3 py-2 border rounded" rows="10"><%= blog.content %></textarea>
        </div>
        <div class="mb-4">
            <label for="media" class="block mb-2">Media (Image or Video)</label>
            <input type="file" id="media" name="media" class="w-full px-3 py-2 border rounded">
            <% if (blog.media) { %>
                <img src="/uploads/blog/<%= blog.media %>" alt="Current media" class="mt-2 w-full h-40 object-cover">
            <% } %>
        </div>
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded"><i class="fas fa-save mr-1"></i>Update Blog</button>
    </form>
</div>