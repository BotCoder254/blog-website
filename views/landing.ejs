<div class="text-center"></div>
    <h1 class="text-4xl font-bold mb-4">Welcome to Blog Website</h1>
    <p class="text-xl mb-8">Share your thoughts with the world</p>
    <div class="mb-8">
        <a href="/auth/login" class="bg-blue-500 text-white px-4 py-2 rounded mr-2"><i class="fas fa-sign-in-alt mr-1"></i>Login</a>
        <a href="/auth/register" class="bg-green-500 text-white px-4 py-2 rounded"><i class="fas fa-user-plus mr-1"></i>Register</a>
    </div>
</div>

<div class="max-w-4xl mx-auto">
    <h2 class="text-2xl font-bold mb-4">Recent Blog Posts</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% recentBlogs.forEach(blog => { %>
            <div class="bg-white p-4 rounded shadow">
                <h3 class="text-xl font-bold mb-2"><%= blog.title %></h3>
                <p class="mb-2"><%= blog.content.substring(0, 100) %>...</p>
                <div class="flex items-center text-sm text-gray-500">
                    <img src="/uploads/profile/blog.author.profileImage %>" alt="Author" class="w-6 h-6 rounded-full mr-2">
                    <span><%= blog.author.name %></span>
                    <span class="mx-2">â€¢</span>
                    <span><%= new Date(blog.date).toLocaleDateString() %></span>
                </div>
            </div>
        <% }) %>
    </div>
</div>