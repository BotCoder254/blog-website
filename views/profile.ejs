<div class="max-w-2xl mx-auto"></div>
    <h1 class="text-3xl font-bold mb-4">User Profile</h1>
    <form action="/user/profile" method="POST" enctype="multipart/form-data">
        <div class="mb-4">
            <label for="name" class="block mb-2">Name</label>
            <input type="text" id="name" name="name" required class="w-full px-3 py-2 border rounded" value="<%= user.name %>">
        </div>
        <div class="mb-4">
            <label for="bio" class="block mb-2">Bio</label>
            <textarea id="bio" name="bio" class="w-full px-3 py-2 border rounded" rows="4"><%= user.bio %></textarea>
        </div>
        <div class="mb-4">
            <label for="profileImage" class="block mb-2">Profile Image</label>
            <input type="file" id="profileImage" name="profileImage" class="w-full px-3 py-2 border rounded">
            <img src="/uploads/profile/<%= user.profileImage %>" alt="Current profile image" class="mt-2 w-32 h-32 object-cover rounded-full">
        </div>
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded"><i class="fas fa-save mr-1"></i>Update Profile</button>
    </form>
</div>